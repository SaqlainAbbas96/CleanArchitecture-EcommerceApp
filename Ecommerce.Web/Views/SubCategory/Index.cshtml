@model IEnumerable<Ecommerce.Application.DTOs.SubCategoryViewModelDTO>

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Sub Category Name
            </th>
            <th>
                Category Name
            </th>
            <th>
                Description
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>    
                    @Html.DisplayFor(modelItem => item.subCategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateSubCategory", new { id = item.subCategoryId }) |
                    @Html.ActionLink("Delete", "DeleteSubCategory", new { id = item.subCategoryId })
                </td>
            </tr>
        }
    </tbody>
</table>