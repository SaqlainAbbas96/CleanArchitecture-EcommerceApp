@model IEnumerable<Ecommerce.Application.DTOs.SupplierViewModelDTO>

@{
    ViewBag.Title = "Index";
}

<p class="btn btn-sm">
    @Html.ActionLink("Add", "AddSupplier", "Supplier", "", new { @class = "btn btn-sm btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Supplier Name
            </th>
            <th>
                Company Name
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.supplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.companyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateSupplier", new { id = item.supplierId }, new { @class = "btn btn-sm btn-dark" })
                    @Html.ActionLink("Delete", "DeleteSupplier", new { id = item.supplierId }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>